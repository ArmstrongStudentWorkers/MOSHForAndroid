<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmccarthy.mosh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/inversemosh"
        android:label="@string/app_name"
        android:logo="@drawable/inversemosh"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cmccarthy.mosh.MoshActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cmccarthy.mosh.WorkstationActivity"
            android:label="@string/title_activity_workstation"
            android:parentActivityName="com.cmccarthy.mosh.MoshActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cmccarthy.mosh.MoshActivity" />
        </activity>
        <activity
            android:name="com.cmccarthy.mosh.HardwareActivity"
            android:label="@string/title_activity_hardware"
            android:parentActivityName="com.cmccarthy.mosh.MoshActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cmccarthy.mosh.MoshActivity" />
        </activity>
        <activity
            android:name="com.cmccarthy.mosh.HardwareDetailActivity"
            android:label="@string/title_activity_hardware_detail"
            android:parentActivityName="com.cmccarthy.mosh.MoshActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cmccarthy.mosh.MoshActivity" />
        </activity>
        <activity
            android:name="com.cmccarthy.mosh.AddHardwareActivity"
            android:label="@string/title_activity_add_hardware"
            android:parentActivityName="com.cmccarthy.mosh.MoshActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cmccarthy.mosh.MoshActivity" />
        </activity>
    </application>

</manifest>
